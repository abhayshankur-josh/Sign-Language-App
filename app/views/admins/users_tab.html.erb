<!-- User List -->
<div class="container-fluid py-4">
    <div class="card">
      <div class="card-body">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="d-flex align-items-center">
            <i class="bi bi-people me-2"></i>
            <h5 class="mb-0">Users List</h5>
          </div>
          <div>
            <button class="btn btn-manage-groups me-2">
              <i class="bi bi-gear-fill me-1"></i> Manage Groups
            </button>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-add-user" data-bs-toggle="modal" data-bs-target="#inviteUserModal">
              <i class="bi bi-plus me-1"></i> Invite User
            </button>
          </div>
        </div>

        <!-- Table Controls -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="d-flex align-items-center">
            <select class="form-select entries-select me-2">
              <option value="10">10</option>
              <option value="20">20</option>
              <option value="50">50</option>
            </select>
            <span class="text-muted" style="text-wrap: nowrap;">entries per page</span>
          </div>
          <div>
            <input type="search" class="form-control search-box" placeholder="Search...">
          </div>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>User</th>
                <th>Email</th>
                <th>Role</th>
                <th>Joined Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name%></td>
                <td><%= user.email %></td>
                <td><%= RoleQuery.instance.get_role_name(user.role_id) %></td>
                <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                <td>
                  <i class="bi bi-pencil action-icon me-2"></i>
                  <i class="bi bi-trash action-icon"></i>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-4">
          <div class="text-muted">
            Showing 1 to 10 of 20 entries
          </div>
          <nav>
            <ul class="pagination">
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
</div>

<!-- Invite User Modal -->
<div class="modal fade" id="inviteUserModal" tabindex="-1" aria-labelledby="inviteUserModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inviteUserModalLabel">
          <i class="bi bi-person-plus me-2"></i>Invite New User
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(url: admins_user_path, method: :post, id: "inviteUserForm") do |form| %>
      <div class="modal-body">
          <!-- Name Field -->
          <div class="mb-3">
            <%= form.label :userName, "Full Name", class: "form-label" %>
            <%= form.text_field :userName, class: "form-control", id: "userName", placeholder: "Enter user's full name", required: true %>
            <%# <label for="userName" class="form-label">Full Name</label>
            <input type="text" name="userName" class="form-control" id="userName" placeholder="Enter user's full name" required> %>
          </div>

          <!-- Email Field -->
          <div class="mb-3">
            <%= form.label :userEmail, "Email Address", class: "form-label" %>
            <%= form.email_field :userEmail, class: "form-control", id: "userEmail", placeholder: "Enter user's email address", required: true %>
            <%# <label for="userEmail" class="form-label">Email Address</label>
            <input type="email" name="userEmail" class="form-control" id="userEmail" placeholder="Enter user's email address" required> %>
          </div>

          <!-- Role Field -->
          <div class="mb-3">
            <%# <label for="userRole" class="form-label">Role</label>
            <select class="form-select" name="userRole" id="userRole" required>
              <option value="" selected disabled>Select user role</option>
              <option value="user">Regular User</option>
              <option value="expert">Expert</option>
              <option value="admin">Administrator</option>
            </select> %>
            <%= form.label :userRole, "Role", class: "form-label" %>
            <%= form.select :userRole, 
                options_for_select([['Regular User', 'user'], ['Expert', 'expert'], ['Administrator', 'admin']], selected: ''), 
                { include_blank: 'Select user role', required: true }, 
                class: 'form-select', 
                id: 'userRole' %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="inviteUserForm" class="btn btn-invite">
          <i class="bi bi-send me-2"></i>Send Invitation
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>