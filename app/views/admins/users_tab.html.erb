<!-- User List -->
<div class="container-fluid py-4">
    <div class="card">
      <div class="card-body">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="d-flex align-items-center">
            <i class="bi bi-people me-2"></i>
            <h5 class="mb-0">Users List</h5>
          </div>
          <div>
            <button class="btn btn-manage-groups me-2">
              <i class="bi bi-gear-fill me-1"></i> Manage Groups
            </button>
            <%= link_to admins_new_user_path, {class: "btn btn-add-user"} do%>
              <i class="bi bi-plus me-1"></i> Add New User
            <% end %>
          </div>
        </div>

        <!-- Table Controls -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div class="d-flex align-items-center">
            <select class="form-select entries-select me-2">
              <option value="10">10</option>
              <option value="20">20</option>
              <option value="50">50</option>
            </select>
            <span class="text-muted" style="text-wrap: nowrap;">entries per page</span>
          </div>
          <div>
            <input type="search" class="form-control search-box" placeholder="Search...">
          </div>
        </div>

        <!-- Users Table -->
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>User</th>
                <th>Email</th>
                <th>Role</th>
                <th>Joined Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name%></td>
                <td><%= user.email %></td>
                <td><%= RoleQuery.instance.get_role_name(user.role_id) %></td>
                <td><%= user.created_at.strftime("%B %d, %Y") %></td>
                <td>
                  <i class="bi bi-pencil action-icon me-2"></i>
                  <i class="bi bi-trash action-icon"></i>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-between align-items-center mt-4">
          <div class="text-muted">
            Showing 1 to 10 of 20 entries
          </div>
          <nav>
            <ul class="pagination">
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
</div>
