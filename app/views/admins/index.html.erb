<% content_for :title, "Admins" %>

<%= render "header" %>

<section>
    <div class="container mt-5">
        <h2 class="mb-4">Users List</h2>
        <div class="row mb-3">
            <div class="col-md-4">
                <label>
                    <select class="form-control d-inline w-auto">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="15">15</option>
                    <option value="20">20</option>
                    <option value="25">25</option>
                    </select> 
                    entries per page
                </label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" placeholder="Search...">
            </div>
            <div class="col-md-3 text-end">
                <%= link_to new_admin_path, class: "btn btn-outline-primary" do%>
                    <i class="bi bi-person-plus"></i> Add User
                <% end %>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Names</th>
                <th>Email</th>
                <th>Role</th>
                <th>Joined Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <%= link_to @user do%>
                    <tr>
                        <td>
                        <%= image_tag('profile-2.png', class: "rounded-circle me-2", width: "30",   alt: "Avatar") %>
                        <%= user.full_name %>
                        </td>
                        <td><%= user.email %></td>
                        <td><%= user.role_id %></td>
                        <td><%= user.created_at.to_fs(:long_ordinal) %></td>
                        <td>
                            <%= link_to "Edit", edit_admin_path(user), class: "btn btn-sm btn-primary" %>
                            <%= link_to "Delete",  admin_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
                        </td>
                    </tr>
                <% end %>
            <% end %>
            <!-- Repeat rows as necessary -->
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</section>
